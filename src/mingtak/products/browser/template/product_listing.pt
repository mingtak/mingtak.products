<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingtak.products">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
request = econtext['request']
itemInCart = request.cookies.get('itemInCart', 'null')
?>

<h3 i18n:translate="">Product Listing</h3>
<tal:products define="items context/getChildNodes">
  <tal:item repeat="item items">
    <p tal:condition="python:api.content.get_state(obj=item) == 'published'">
      <a tal:attributes="href item/absolute_url; 
                         title item/title">
        <img tal:replace="structure item/@@images/image_1/thumb" />
      </a>
      <a href="javascript: void(0)" class="btn btn-info"
         tal:attributes="id item/UID"
         v-on:click="addToCart('plus', '${item/UID}')">放入購物車</a>
      <a href="javascript: void(0)" class="btn btn-warning"
         tal:attributes="id item/UID"
         v-on:click="addToCart('less', '${item/UID}')">數量減1</a>
      <a href="javascript: void(0)" class="btn btn-danger"
         tal:attributes="id item/UID"
         v-on:click="addToCart('del', '${item/UID}')">刪除本項</a>
    </p>
  </tal:item>
</tal:products>

<div class="cart_state">
  <p>{{ message }}</p>
</div>

<!-- 上線前要改 min <script src="https://vuejs.org/js/vue.min.js" /> -->
<script src="https://vuejs.org/js/vue.js" />
<script src="https://cdn.jsdelivr.net/vue.resource/1.0.2/vue-resource.min.js"></script>
<script>
new Vue({
  el: 'body',
  data: {
    message: '${itemInCart}'
  },
  methods: {
    addToCart: function (action, uid) {
      // GET
      this.$http.get('/outlet/cart_update?action=' + action + '&uid=' + uid).then((response) => {
        // success callback
           this.message = response.body;
        }, (response) => {
          // error callback
            console.log('error');
      });
    }
  }
})
</script>

</metal:content-core>
</metal:content-core>

</body>
</html>
